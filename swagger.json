{
  "openapi": "3.0.0",
  "info": {
    "title": "User Authentication & Referral API",
    "description": "API documentation for User Signup, Phone.email OTP Verification, Referrals, and Payments.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5000",
      "description": "Local server"
    }
  ],
  "paths": {
    "/user/signup": {
      "post": {
        "summary": "Register a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "phnumber": { "type": "string" },
                  "name": { "type": "string" },
                  "dateofbirth": { "type": "string" },
                  "gender": { "type": "string" },
                  "occupation": { "type": "string" },
                  "upi_id": { "type": "string" },
                  "given_referral_code": { "type": "string" }
                },
                "required": ["phnumber", "name", "upi_id"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "User created successfully" },
          "400": { "description": "User already exists" }
        }
      }
    },
    "/api/verify-otp": {
      "post": {
        "summary": "Verify Phone.email OTP",
        "description": "Receives the automated JSON URL from the frontend and fetches verified user data from Phone.email servers.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_json_url": { "type": "string", "example": "https://user.phone.email/user_abc123.json" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Phone verified successfully" },
          "400": { "description": "Missing user_json_url" },
          "500": { "description": "Internal server error or external fetch failed" }
        }
      }
    },
    "/user/login": {
      "get": {
        "summary": "User Login",
        "parameters": [
          {
            "name": "phnumber",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Login successful" },
          "404": { "description": "User not found" }
        }
      }
    },
    "/referral-leaderboard": {
      "get": {
        "summary": "Get referral rankings",
        "responses": {
          "200": { "description": "Returns winner and list of users with referral counts" }
        }
      }
    },
    "/user/updatepayment": {
      "post": {
        "summary": "Update investment and payment details",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "upi_id": { "type": "string" },
                  "investedamount": { "type": "number" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Payment details updated" },
          "404": { "description": "Invalid UPI ID" }
        }
      }
    },
    "/allusers": {
      "get": {
        "summary": "Get all registered users",
        "responses": {
          "200": { "description": "List of all users" }
        }
      }
    }
  }
}