{
  "openapi": "3.0.0",
  "info": {
    "title": "KingMakers Mongo API",
    "version": "1.1.0",
    "description": "API documentation including OTP verification, password hashing, and referral logic."
  },
  "servers": [
    { "url": "https://king-makers-mongo-api.vercel.app" }
  ],
  "paths": {
    "/user/signup": {
      "post": {
        "summary": "Register a new user with hashed password",
        "tags": ["Authentication"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UserInput" }
            }
          }
        },
        "responses": {
          "200": { "description": "User created", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/User" } } } },
          "400": { "description": "User already exists" }
        }
      }
    },
    "/user/login": {
      "post": {
        "summary": "Login with phone and password",
        "tags": ["Authentication"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "phnumber": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["phnumber", "password"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login successful" },
          "400": { "description": "Invalid credentials" }
        }
      }
    },
    "/api/verify-otp": {
      "post": {
        "summary": "Verify phone via Phone.email JSON URL",
        "tags": ["Verification"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_json_url": { "type": "string", "example": "https://auth.phone.email/getuser/..." }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Phone verified successfully" },
          "500": { "description": "Verification failed" }
        }
      }
    },
    "/user/delete": {
      "delete": {
        "summary": "Delete a user by phone number",
        "tags": ["User Actions"],
        "parameters": [
          {
            "name": "phnumber",
            "in": "query",
            "description": "Phone number of user to delete",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "User deleted successfully" },
          "404": { "description": "User not found" }
        }
      }
    },
    "/referral-leaderboard": {
      "get": {
        "summary": "Get referral leaderboard",
        "tags": ["Referrals"],
        "responses": {
          "200": { "description": "Leaderboard data" }
        }
      }
    },
    "/allusers": {
      "get": {
        "summary": "Get all users",
        "tags": ["Admin"],
        "responses": {
          "200": { "description": "List of all users" }
        }
      }
    },
    "/user/updatepayment": {
      "post": {
        "summary": "Update investment amount",
        "tags": ["User Actions"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "upi_id": { "type": "string" },
                  "investedamount": { "type": "number" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Success" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UserInput": {
        "type": "object",
        "properties": {
          "phnumber": { "type": "string" },
          "name": { "type": "string" },
          "password": { "type": "string" },
          "dateofbirth": { "type": "string" },
          "gender": { "type": "string" },
          "occupation": { "type": "string" },
          "upi_id": { "type": "string" },
          "given_referral_code": { "type": "string" }
        },
        "required": ["phnumber", "name", "password", "upi_id"]
      },
      "User": {
        "allOf": [
          { "$ref": "#/components/schemas/UserInput" },
          { "type": "object", "properties": { "_id": { "type": "string" }, "referral_code_generated": { "type": "string" } } }
        ]
      }
    }
  }
}